            <TextBlock>아이디</TextBlock>
            <TextBox></TextBox>
            <TextBlock>비밀번호</TextBlock>
            <PasswordBox></PasswordBox>
            
            <Button HorizontalAlignment="Stretch">로그인</Button>
            <Button HorizontalAlignment="Stretch">아이디생성</Button>
        </StackPanel>
    </Grid>
</Page>
